@inject IModalService ModalService

<div class="simple-form">

    <div class="form-group">
        <p>請確認是否要刪除這筆 @RecordTitleName 資料</p>
    </div>

    <button @onclick="SubmitForm" class="btn btn-danger">刪除</button>
    <button @onclick="Cancel" class="btn btn-secondary">取消</button>
</div>

@code {
    [CascadingParameter] ModalParameters Parameters { get; set; }
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }
    [Parameter] public string RecordTitleName { get; set; }

    void SubmitForm()
    {
        BlazoredModal.Close(ModalResult.Ok($"RecordTitleName {RecordTitleName} was submitted successfully"));
    }

    void Cancel()
    {
        BlazoredModal.Cancel();
    }
}
